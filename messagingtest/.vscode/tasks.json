    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mvn",
            "args": [
                // Ask msbuild to generate full paths for file names.
                "spring-boot:run"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        }
    ]
}